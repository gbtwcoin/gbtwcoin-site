<script>
// ===== Starfield (3D-ish) =====
(function(){
  const canvas = document.getElementById('starfield');
  const ctx = canvas.getContext('2d');
  let w, h, dpr = Math.min(window.devicePixelRatio||1, 2);

  function resize(){
    w = canvas.width = Math.floor(innerWidth * dpr);
    h = canvas.height = Math.floor(innerHeight * dpr);
    canvas.style.width = innerWidth + 'px';
    canvas.style.height = innerHeight + 'px';
  }
  window.addEventListener('resize', resize, {passive:true});
  resize();

  const STAR_LAYERS = [
    {count: 120, speed: 0.02, size: 1.0, alpha: 0.9},
    {count: 180, speed: 0.05, size: 0.9, alpha: 0.7},
    {count: 240, speed: 0.09, size: 0.8, alpha: 0.55}
  ];

  let stars = [];
  function init(){
    stars.length = 0;
    STAR_LAYERS.forEach((L, li)=>{
      for(let i=0;i<L.count;i++){
        stars.push({
          x: Math.random()*w,
          y: Math.random()*h,
          z: Math.random()*1 + 0.2 + li*0.2, // depth
          s: L.size,
          a: L.alpha,
          sp: L.speed*(0.6+Math.random()*0.8)
        });
      }
    });
  }
  init();

  function tick(){
    ctx.clearRect(0,0,w,h);
    // subtle backdrop glow
    const g = ctx.createRadialGradient(w*0.7,h*0.3,0,w*0.7,h*0.3,Math.max(w,h)*0.9);
    g.addColorStop(0,'rgba(106,225,255,0.05)');
    g.addColorStop(1,'rgba(0,0,0,0)');
    ctx.fillStyle = g; ctx.fillRect(0,0,w,h);

    for(const st of stars){
      st.x += st.sp * dpr * 1.4;      // horizontal drift (ship moving forward-right)
      st.y -= st.sp * dpr * 0.2;      // slight upward drift
      if(st.x > w+4 || st.y < -4){    // wrap
        st.x = -4; st.y = Math.random()*h; st.z = st.z; // keep depth
      }
      const sz = st.s * dpr * (0.6 + st.z*0.8);
      ctx.globalAlpha = st.a * (0.6 + st.z*0.6);
      ctx.fillStyle = '#cfe6ff';
      ctx.fillRect(st.x, st.y, sz, sz);
    }
    ctx.globalAlpha = 1;
    requestAnimationFrame(tick);
  }
  requestAnimationFrame(tick);
})();

// ===== Rocket fly-by every 20â€“40s =====
(function(){
  const rocket = document.querySelector('.rocket');
  function launch(){
    if(!rocket) return;
    rocket.classList.remove('active');
    // randomize start height a bit
    const base = 12 + Math.random()*30; // 12â€“42%
    rocket.style.bottom = base + '%';
    // trigger new run
    void rocket.offsetWidth; // reflow
    rocket.classList.add('active');
    // schedule next fly-by
    const next = 20000 + Math.random()*20000; // 20â€“40s
    setTimeout(launch, next);
  }
  setTimeout(launch, 2000); // first pass after 2s
})();
</script>
